<div class='nested-fields'>
<%= simple_form_for [@user, @workout] do |f| %>

     <%= f.input :name %>


    <%= f.simple_fields_for :exercises do |exercise| %>
       =render "exercises", :f => exercise.links %>

       <%= f.input :rest_time %>
       <%= f.input :sets %>
       <%= f.input :reps %>

    <%end%>

    <%= link_to_add_association "Add Exercise"%>

    <%= f.button :submit %>
<%end%>
