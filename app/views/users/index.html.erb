<div class = 'panel opacity margin-top'>
  <div class = 'row'>
    <div class="large-6 columns">
      <h4>Users</h4>
        <ul>
          <% @users.each do |user|%>
           <% if user.image.blank? %>
            <li><%= image_tag("https://cdn2.iconfinder.com/data/icons/windows-8-metro-style/256/dumbbell.png", size: "100x100") %><br>
            <%= link_to user.name, user_path(user)%>
            <%= button_to "Add Friend", friendships_path(friend_id: user), method: :post 
            %>
            <br>
          <%else%>
            <li><%= image_tag user.image_url(:thumb).to_s %>
            <%= link_to "#{user.name}", user_path(user) %><br>
            <%= button_to "Add Friend", friendships_path(friend_id: user), method: :post %></li><br>
          <%end%>
        <%end%>
        </ul>
    </div>
  </div>
</div>
