<%= "#{ @user.name }" %><br>

  <%= image_tag(@user.largeimage)%>

<br>
<h4>About</h4>
<% if @user.age == nil %>
   <%= "Age: --" %>
  <% else %>
  <%= "Age: #{@user.age}" %>
<% end %>
<br>

<% if @user.location == nil %>
   <%= "Location: --" %>
  <% else %>
  <%= "Location: #{@user.location}" %>
<% end %>
<br>

<% if @user.gender == nil %>
     <%= "Gender: --" %>
    <% else %>
  <%= "Gender: #{@user.gender}" %>
<% end %>
<br>

<% if @user.occupation == nil %>
    <%= "Occupation: --" %>
<% else %>
<%= "Occupation: #{@user.gender}" %>
<% end %>
<br>

<% if @user.gym == nil %>
    <%= "Gym: --" %>
<% else %>
<%= "Current Gym: #{@user.gym}" %>
<% end %>
<br>

<% if @user.about == nil %>
    <%= "About: --" %>
<% else %>
<%= " Personal Description: #{@user.about}" %>
<%end%>
<br>
<% if @user != current_user %>
  <%= ''%>
<%else%>
  <%= link_to "Edit Profile", edit_user_path(@user) %><br><br>
<%end%>

  <% if @user_friends.count == 0  %>
    <%= ' No Current Friends' %><br>
    <%= link_to ' Find Friends', users_path%><br><br>
  <% else %>
    <h4>Friends</h4>
      <ul>
        <% @user.friends.each do |user| %>
          <li>
            <%= user.name %>
            <%= button_to "remove", friendship_path, :method => :delete %>
          </li>
        <% end %>
      </ul>
  <% end %>  

<%if @user_stats != nil%>
  <h4>Current Stats</h4>
    <%= "Bench Max: #{ @user_stats.bench }" %><br>
    <%= "Squat Max: #{ @user_stats.squat }" %><br>
    <%= "Dead lift Max: #{ @user_stats.dead_lift }" %><br>
    <%= "Best Mile time: #{ @user_stats.mile} " %><br>

    <% if @user != current_user %>
      <%= ''%>
    <% else %>
      <%= link_to "Edit your current stats", edit_user_stat_path(@user, @user.stat) %><br>
    <br>
    <%end%>

<%else%>
  <%= "No Current Stats"%><br>
  <% if @user != current_user %>
      <%= ''%>
  <%else%>
    <%= link_to "Add your current stats", new_user_stat_path(@user, @user.stat) %><br>
  <%end%>
<%end%>
<br>

<%if @user_goals != nil%>
  <h4>Current Goals</h4>
    <%= "Bench Goal: #{ @user_goals.bench }" %><br>
    <%= "Squat Goal: #{ @user_goals.squat }" %><br>
    <%= "Dead lift Goal: #{ @user_goals.dead_lift }" %><br>
    <%= "Goal Mile time: #{ @user_goals.mile }" %><br>
    
    <% if @user != current_user %>
      <%= ''%><br>
    <%else%>
      <%= link_to "Edit your current goals", new_user_goal_path(@user, @user.goal) %><br>
    <%end%>
  <%else%>
  <%= "No Current Goals"%><br>
    <% if @user != current_user %>
      <%= ''%><br>
    <%else%>
    <%= link_to "Add your current goals", new_user_goal_path(@user, @user.goal) %><br>
  <%end%>
<%end%>
<br> 

<% if @user != current_user %>
    <%= ''%><br>
  <%else%>
  <%= link_to "Log a new workout", new_user_workout_session_path(@user) %><br>
<% end %>

<h4>Workout's Completed</h4>
<% @user_workout_sessions.each do |session|%>
  <table>
    <%="Date: #{session.date_completed}"%><br>
    <%="Workout Name: #{session.workout.name}"%><br>
    <%= link_to "Edit this workout",'workout_sessions#edit' %><br>
    <%= link_to "Delete this workout", 'workout_sessions#destroy', method: :delete %>
    <thead>
      <tr>
        <th>Exercise Name</th>
        <th>Sets</th>
        <th>Reps</th>
        <th>Rest Time</th>
      </tr>
    </thead>
    <% session.workout.workout_exercise_connectors.each do |interval| %>
    <tbody>
      <tr>
        <td><%= interval.exercise.name %></td>
        <td><%= interval.sets %>
        <td><%= interval.reps %>
        <td><%= interval.rest_time %>
      </tr>
      <%end%>
    </tbody>
  </table>
<%end%>
<br>
<%= link_to "Back to Home", user_path %>
