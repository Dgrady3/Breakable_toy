<%= form_for [current_user, @goals] do |f| %>
  <%= f.label :bench, "Max Bench (1 rep)" %>
  <%= f.text_field :bench, required: true %>
  <%= f.label :squat, "Squat Max (1 rep)" %>
  <%= f.text_field :squat, required: true %>
  <%= f.label :dead_lift, "Dead lift Max (1 rep) " %>
  <%= f.text_field :dead_lift, required: true %>
  <%= f.label :mile, "Best Mile time" %>
  <%= f.text_field :mile, required: true %>
  <%= f.submit :submit %>
<% end %>